{
    "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
    "diagnostics": {
        "disable": [
            "missing-fields"
        ],
        "globals": [
            "Snacks",
            "vim"
        ]
    },
    "format": {
        "enable": false,
        "defaultConfig": {
            "indent_size": "4",
            "tab_width": "4",
            "quote_style": "double"
        }
    },
    "workspace": {
        "checkThirdParty": false
    }
}
